        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "var initialRemaining = parseInt(pm.environment.get('initial_remaining'));",
              "var currentRemaining = jsonData.overallRemaining;",
              "",
              "console.log('üìä AFTER REGISTRATION:');",
              "console.log('Initial Remaining:', initialRemaining);",
              "console.log('Current Remaining:', currentRemaining);",
              "console.log('Expected Decrease:', '4 l∆∞·ª£t (2 weeks √ó 2 quota)');",
              "",
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// üêõ BUG TEST: Should decrease but doesn't",
              "pm.test('üêõ BUG: overallRemaining should decrease by 4', function () {",
              "    var expectedRemaining = initialRemaining - 4;",
              "    if (currentRemaining === initialRemaining) {",
              "        console.error('‚ùå BUG CONFIRMED: overallRemaining NOT updated!');",
              "        console.error('   Expected:', expectedRemaining);",
              "        console.error('   Actual:', currentRemaining);",
              "    } else if (currentRemaining === expectedRemaining) {",
              "        console.log('‚úÖ FIXED: overallRemaining correctly updated!');",
              "    } else {",
              "        console.warn('‚ö†Ô∏è UNEXPECTED: Different calculation logic');",
              "        console.warn('   Expected:', expectedRemaining);",
              "        console.warn('   Actual:', currentRemaining);",
              "    }",
              "    // This test will FAIL if bug exists",
              "    pm.expect(currentRemaining).to.equal(expectedRemaining);",
              "});",
              "",
              "// Check monthly availability",
              "var novAvailable = jsonData.availabilityByMonth.find(m => m.month === '2025-11')?.totalDatesAvailable;",
              "var decAvailable = jsonData.availabilityByMonth.find(m => m.month === '2025-12')?.totalDatesAvailable;",
              "",
              "console.log('November Available - Before:', pm.environment.get('initial_nov_available'), 'After:', novAvailable);",
              "console.log('December Available - Before:', pm.environment.get('initial_dec_available'), 'After:', decAvailable);",
              "",
              "pm.test('üêõ BUG: November availability should decrease', function () {",
              "    var initialNov = parseInt(pm.environment.get('initial_nov_available'));",
              "    if (novAvailable === initialNov) {",
              "        console.error('‚ùå BUG: November availability NOT updated!');",
              "    }",
              "    // Expected: decrease by 1 (26/11 used)",
              "    pm.expect(novAvailable).to.be.lessThan(initialNov);",
              "});",
              "",
              "pm.test('üêõ BUG: December availability should decrease', function () {",
              "    var initialDec = parseInt(pm.environment.get('initial_dec_available'));",
              "    if (decAvailable === initialDec) {",
              "        console.error('‚ùå BUG: December availability NOT updated!');",
              "    }",
              "    // Expected: decrease by 1 (03/12 used)",
              "    pm.expect(decAvailable).to.be.lessThan(initialDec);",
              "});"
            ],
